<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/depression"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="This is 13 question test for diagnosing, monitoring, and measuring the severity of depression"
        android:textColor="@color/white"
        android:textSize="25sp">

    </TextView>

    <Button
        android:id="@+id/taketest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:text="Take Test">

    </Button>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="See History">

    </Button>

    <TextView
        android:id="@+id/about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="About Depression"
        android:textColor="@color/white"
        android:textSize="18sp">

    </TextView>

</LinearLayout>